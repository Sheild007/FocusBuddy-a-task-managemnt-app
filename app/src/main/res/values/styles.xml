<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NavigationViewStyle" parent="Widget.Design.NavigationView">

        <item name="itemTextColor">@color/menu_item_text_color</item>
        <item name="itemBackground">@color/background_dark</item>

    </style>


    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:background">@color/surface_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:itemBackground">@drawable/menu_item_background</item>
        <item name="android:popupBackground">@color/surface_dark</item>
        <item name="android:colorControlHighlight">@color/surface_dark</item>
        <!-- Force disable ripple -->
        <item name="android:selectableItemBackground">@null</item>
        <item name="android:selectableItemBackgroundBorderless">@null</item>
        <!-- Material specific attributes -->
        <item name="materialThemeOverlay">@null</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your app theme here. -->
        <item name="colorPrimary">@color/accent_green</item>
        <item name="colorPrimaryDark">@color/background_dark</item>
        <item name="colorAccent">@color/accent_green</item>
        <item name="android:popupMenuStyle">@style/CustomPopupMenu</item>

        <item name="colorControlHighlight">@color/surface_dark</item>
        <item name="android:colorControlHighlight">@color/surface_dark</item>
        <item name="colorPrimaryVariant">@color/surface_dark</item>
    </style>



    <style name="ProgressButtonDark" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">0dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:background">@drawable/progress_button_background_dark</item>
    </style>



</resources>