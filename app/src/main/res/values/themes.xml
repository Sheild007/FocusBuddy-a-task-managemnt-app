<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme using Material3 with DayNight support and NoActionBar -->
    <style name="Base.Theme.FocusBuddy" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/on_primary</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>

        <!-- Status bar and navigation bar colors -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/new_status_bar_color</item>

        <!-- Error and on-error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
    </style>

    <!-- Actual theme that inherits from Base.Theme.FocusBuddy -->
    <style name="Theme.FocusBuddy" parent="Base.Theme.FocusBuddy">
        <!-- Customize additional attributes if needed -->
        <!-- You can add items here to override the base theme for this specific theme -->
    </style>
</resources>
