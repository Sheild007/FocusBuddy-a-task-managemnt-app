<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for Dark Mode using Material3 with DayNight support and NoActionBar -->
    <style name="Base.Theme.FocusBuddy" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color for dark theme -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>

        <!-- Secondary brand color for dark theme -->
        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <!-- Background colors for dark theme -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>

        <!-- Status bar and navigation bar colors for dark theme -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/black</item>

        <item name="android:popupBackground">@color/background_dark</item>
        <!-- Error and on-error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>


        <item name="android:colorControlHighlight">@color/surface_dark</item>
        <item name="colorControlHighlight">@color/surface_dark</item>
        <item name="android:selectableItemBackground">@null</item>
        <item name="android:selectableItemBackgroundBorderless">@null</item>
        <item name="rippleColor">@android:color/transparent</item>



    </style>
</resources>
